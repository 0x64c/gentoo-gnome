  +gnome-vfs-2.12.0-afs.patch, +gnome-vfs-2.15.2-headers-define.patch,
  +gnome-vfs-2.16.0-no-dbus-crash.patch,
  +gnome-vfs-2.18.1-drop-gtk-doc-check.patch,
